@model To_Do_List_Jagdeep.Models.TodoItem
@{
    ViewData["Title"] = "Delete";
}

<div style="text-align:center">
    <h3>Do you want to delete this todo item? If yes then click delete</h3>
    <hr />
    <dl class="row" style="text-align:center">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AddedDate)</dt>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="TodoItemId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
